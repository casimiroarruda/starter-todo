{% extends "main.twig" %}
{% block h2 %}Tarefas{% endblock %}
{% block content %}
<a href="/task.create">Nova Tarefa</a>
<ul>
    {% for task in tasks %}
        <li class="">
            {% if task.isDone() %}
                <span class="done">
            {% else %}
                <form class="list" action="/task/{{ task.getId() }}" method="post">
                    <button name="done" value="true" type="submit">&checkmark;</button>
                </form>
                <a href="/task.edit/{{ task.getId() }}">
            {% endif %}
            {{ task.getTitle() }}
            {% if task.isDone() %}
            </span>
            {% else %}
            </a>
            {% endif %}
        </li>
    {% endfor %}
</ul>
{% endblock %}